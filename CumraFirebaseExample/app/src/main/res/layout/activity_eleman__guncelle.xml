<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ElemanEkle.Eleman_Guncelle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Browse image to upload"
            android:onClick="btnBrowse_Click"
            tools:ignore="OnClick" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:id="@+id/imageView_foto"
            />
        <EditText
            android:ems="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isim"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:hint="Ad-Soyad Giriniz.."
            android:inputType="text"
            />

        <EditText
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/departman"
            android:hint="Departman Giriniz.."
            />

        <EditText
            android:ems="10"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isgörevi"
            android:hint="Görev Giriniz.."
            />

        <EditText
            android:ems="10"
            android:inputType="number"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maas"
            android:hint="Maaş Giriniz.."
            />



        <EditText
            android:ems="10"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telefon"
            android:inputType="phone"
            android:hint="Telefon Giriniz.."
            />
        <EditText
            android:ems="10"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:hint="Email Giriniz.."
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            />

        <EditText
            android:ems="10"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isegiris"
            android:inputType="date"
            android:hint="Ise Giris Tarihini Giriniz.."
            />



        <Spinner
            android:id="@+id/spinner_cinsiyet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:entries="@array/gender"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:id="@+id/spinner_ogrenim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:entries="@array/ogrenim"
            android:layout_alignParentLeft="true" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ekle"
            android:onClick="btnUpload_Click"
            tools:ignore="OnClick" />


    </LinearLayout>







</ScrollView>